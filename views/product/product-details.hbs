<div class="p-5 profile">
  <div class="card shadow 3 mb-5 bg-body rounded mt-5">
    <h5 class="card-header">{{product.name}}</h5>
    <div class="card-body d-flex ps-5 pt-4">
      <img src="{{product.imageUrl}}" class="img-fluid m-3 rounded prodImg" alt="product-pic">
      <div class="w-50 ps-5 ms-5 mt-3">
        <p><b>Description</b><br>{{product.description}}</p>
        <p><b>Condition</b><br>{{product.condition}}</p>
        <div class="d-flex">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512" class="loc">
            <!--! Font Awesome Pro 6.1.1 by @fontawesome - https://fontawesome.com License - 
  https://fontawesome.com/license (Commercial License) Copyright 2022 Fonticons, Inc. -->
            <path d="M168.3 499.2C116.1 435 0 279.4 0 192C0 85.96 85.96 0 192 0C298 0 384 85.96 384 
  192C384 279.4 267 435 215.7 499.2C203.4 514.5 180.6 514.5 168.3 499.2H168.3zM192 256C227.3
   256 256 227.3 256 192C256 156.7 227.3 128 192 128C156.7 128 128 156.7 128 192C128 227.3 156.7
    256 192 256z" />
          </svg>
          <p>{{product.location.city}}, {{product.location.country}}</p>
        </div>
        <div class="d-flex justify-content-end p-3 mt-3 prodLinks">
          {{#if isLoggedIn}}
          {{#ifEquals owner._id user._id}}
          <button class="btn btn-success m-2"><a href="/product/{{product._id}}/edit">Edit</a></button>
          <form action="/product/{{product._id}}/delete" method="post">
            <button type="submit" class="btn btn-danger m-2">Delete</button>
          </form>
          {{/ifEquals}}
          {{/if}}
          <button class="btn btn-success m-2"><a href="/product/{{product._id}}/request">Request this
              product</a></button>
        </div>
      </div>
    </div>
  </div>
  <hr>
  <div>
    <form action="/product/{{product._id}}" method="post">
      <label for="question" class="form-label">Ask a question!</label>
      <input type="text" class="form-control" id="question" name="question">
      <button type="submit" class="btn btn-danger">Submit</button>
    </form>
    {{#each product.questions}}
    <div class="question">
      <p>{{this.user.username}}:</p>
      <p>{{this.question}}</p>
    </div>
    {{/each}}
  </div>
</div>