<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Edit {{name}}</h1>

            <hr>

            <form action="/{{_id}}/edit" method="POST">

                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input required type="text" class="form-control" id="name" name="name" value="{{name}}">
                </div>

                <div class="mb-3">
                    <label for="imagenUrl" class="form-label">Image</label>
                    <input type="text" class="form-control" id="imagenUrl" name="imagenUrl" value="{{imageUrl}}">
                </div>
                <div class="mb-3">
                    <label for="city" class="form-label">City</label>
                    <input type="text" class="form-control" id="city" name="city" value="{{location.city}}">
                </div>       
                 <div class="mb-3">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" class="form-control" id="country" name="country" value="{{location.country}}">
                </div>              
                <div class="mb-3">
                    <label for="condition" class="form-label">Condition</label>
                    <input type="text" class="form-control" id="condition" name="condition" value="{{condition}}">
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <input type="text" class="form-control" id="description" name="description" value="{{description}}">
                </div>

                <button type="submit" class="btn btn-dark">Edit your product!</button>
                <a href="/" class="btn btn-dark">Home</a>
            </form>
            <hr>
        </div>
    </div>
</div>