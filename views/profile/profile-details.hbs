<div class="p-5 profile">
    <div class="card shadow 3 mb-5 bg-body rounded">
        <h5 class="card-header">My profile</h5>
        <div class="card-body d-flex ps-5 pt-4">
            {{#with user}}
            <img src="images/profile.jpg" class="img-fluid rounded-circle" alt="profile-pic">
            <div class="d-flex justify-content-around w-75">
               <div>
                <h5 class="card-title">Username</h5>
                <p>{{username}}</p>
                <h5>Name</h5>
                <p>{{fullName}}</p>
                <h5>Email</h5>
                <p>{{email}}</p>
            </div>
            <div>
                <h5>Location</h5>
                 <div class="location">
   <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512" class="loc">
  <!--! Font Awesome Pro 6.1.1 by @fontawesome - https://fontawesome.com License - 
