  192C384 279.4 267 435 215.7 499.2C203.4 514.5 180.6 514.5 168.3 499.2H168.3zM192 256C227.3
   256 256 227.3 256 192C256 156.7 227.3 128 192 128C156.7 128 128 156.7 128 192C128 227.3 156.7
    256 192 256z"/></svg>
  <p>{{location.city}}, {{location.country}}</p> 
  </div>
                {{/with}}
                <a href="/profile/edit" class="btn btn-success">Update details</a>
            </div>  
            </div>
           
        </div>
    </div>

    <h4>My ads</h4>
    <div class="container">
        <div class="row">
            {{#each myAds}}
            {{> productCard this}}
            {{/each}}
        </div>
    </div>
</div>